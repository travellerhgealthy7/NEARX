{
  "name": "nearx-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "NEARX unified platform monorepo",
  "scripts": {
    "dev:backend": "pnpm --filter @nearx/backend start:dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint -- --fix",
    "lint:backend": "pnpm --filter @nearx/backend lint",
    "lint:web": "pnpm --filter @nearx/web lint",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "husky install",
    "release": "changeset publish"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@types/node": "^20.12.12",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-next": "^14.2.5",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.11",
    "prettier": "^3.3.2"
  }
}
